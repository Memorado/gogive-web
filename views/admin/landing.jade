extends layout

block content
  div(class='row', style='max-width: 800px; margin: 180px auto 0; text-align: center')
    div(class='col-md-6 col-xs-12 floaters')
      img(src='/img/landing-logo.svg' style='max-width: 100%;')
      h1 GoGive
      h2 Discover where, what and how to<br \>donate to refugees in your area
      p
        a(href='#')
          img(src='/img/app-store.svg', alt='App Store', style='max-width: 100%')
      p Are you a donation centre? Click 
        a(href='/admin/user/login') Here
    div(class='col-md-6')
  style.
    html {
      height: 100% !important;
      background:#131E24 url(/img/background-scene.jpg) no-repeat 50% 50%;
    }
    body {
      background: none;
      color: white;
    }
    .floaters {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    h1 {
      margin-top: 40px;
      font-weight: 100;
      font-size: 64px;
    }
    h2 {
      margin-top: -10px;
      margin-bottom: 50px;
      font-weight: 100;
      font-size: 20px;
    }
    p {
      font-weight: 100;
    }
    a {
      color: white;
      text-decoration: underline;
    }
    a:hover {
      color: white;
      text-decoration: none;
    }
    span {
      text-decoration: underline;
    }
  script.
    var images = [];
    function preload() {
        for (i = 0; i < arguments.length; i++) {
            images[i] = new Image();
            images[i].src = preload.arguments[i];
        }
    }
    preload(
      "/img/background-scene.jpg"
    )

